<div class="row">
  <div class="col-lg-12">
    <div id = 'provider-table' class="panel panel-default" >
      <div class="panel-heading">
          Slots Table
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="     dataTables-example">
          <thead>
            <tr>
              <th>Adv Space Name</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Price</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @slots.each do |slot|%>
              <tr class="odd gradeX" id = "row_<%= slot.id %>">
                <td ><%= slot.adv_space.name&.camelize %></td>
                <td><%= slot.formatted_start_time %></td>
                <td><%= slot.formatted_end_time %></td>
                <td><%= slot.price %></td>
                <td><%= slot.status&.camelize %></td>
                <td>
                    <%= link_to 'Pre-Book'.html_safe, slot_path(slot.id), method: :put, remote: true,class: "Update", data: { confirm: "Are you sure?" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        <!-- /.panel-body -->
    </div>
  </div>
  <!-- /.col-lg-12 -->
</div>
