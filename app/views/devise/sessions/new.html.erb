<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(:session) do |f| %>
                        <div class="form-group">
                            <%= f.text_field :username, class: "form-control", placeholder: "Email/Username",  autofocus: ''%>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :password, class: "form-control", placeholder: "Password",    type:"password" %>
                        </div>
                        <%= f.submit "Sign In", class: 'btn btn-lg btn-success btn-block'%>
                        <%= link_to 'New User Sign Up!', sign_up_path, class: 'btn btn-lg btn-success btn-block' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

