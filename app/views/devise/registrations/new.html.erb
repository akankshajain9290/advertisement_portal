<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign Up</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(:user, url: sign_up_path) do |f| %>
                        <div class="form-group input-group">
                            <span class="input-group-addon">@</span>
                            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :email, class: "form-control", placeholder: "Email Id" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :password, class: "form-control", placeholder: "Password",  type:"password" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                        </div>
                        <div class="form-group">
                            <%= f.text_field :organisation, class: "form-control", placeholder: "Organisation" %>
                        </div>
                        <div class="form-group">
                            <%= f.select :role_id, Role.all.collect { |r| [ r.label.camelize, r.id ] }, {}, {class: "form-control", placeholder: 'Select Role'} %>
                        </div>
                        <%= f.submit "Create my account", class: 'btn btn-lg btn-success btn-block'%>
                        <%= link_to 'Existing User Sign In!', sign_in_path, class: 'btn btn-lg btn-success btn-block' %>
                    <% end %>
                </div>r
            </div>
        </div>
    </div>
</div>
